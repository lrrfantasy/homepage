.header {
  height: auto;
  position: relative;

  svg {
    z-index: -1;
    position: fixed !important;
  }
}

.cover {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  color: white;
  background: rgba(0, 0, 0, .3);
  padding: 20% 10%;
  text-align: center;
  font-size: 35px;
  font-style: italic;
  z-index: 1;
}

.sentence,
.author {
  padding: 20px 0;
}

.author {
  text-align: right;
  font-size: 25px;
}
