@import '../../styles/_mixins';

.bg {
  width: 50%;
  height: 280px;
  bg-image();
}

.month {
  position: absolute;
  left: 33%;
  width: 33%;
  height: 280px;
  background-color: rgba(255, 255, 255, 0.7);
  color: #000;
  text-align: center;
  h3 {
    padding: 17px;
    font-size: 18px;
  }
}

.monthCalendar {
  width: 100%;
  height: 230px;
  td {
    width: calc(100% / 7);
    vertical-align: middle
  }
}

.monthWidget {
  display: flex;
  margin: 50px 0;
  position: relative;
}
